{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <main>
        <div class="bloc_panier" id="bloc_panier_top">
            <p class="line_panier"> Pub sur les promos </p>
        </div>
        <div class="d-flex">
            <div class="d-flex flex-column">

                <div class="bloc_panier">
                    <h1>Your Cart</h1>
                    {# <p> Votre Panier est vide </p> #}
                    <ul>
                        {# Add this inside the loop for cart items in your template #}
                        <form method="POST" action="{{ path('update_cart_item_quantity', {'cartItemId': cartItem.id}) }}">
                            <input type="number" name="quantity" value="{{ cartItem.quantity }}" min="1">
                            <button type="submit">Update</button>
                        </form>

                        {# Add this inside the loop for cart items in your template #}
                        <a href="{{ path('remove_from_cart', {'cartItemId': cartItem.id}) }}">Remove</a>
                    </ul>
                </div>

                <div class="bloc_panier">
                    <p> Vous pourriez aussi aimer:</p>
                    <p>les nouveautés</p> 
                </div>
            </div>

            <div class="bloc_panier">
                <p> Produits liés aux articles du panier</p>
            </div>
        </div>
    </main>
{% endblock %}